@using AEDProject.ViewModels;
@model DocumentAddEditViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link type="text/css" rel="stylesheet" href="/css/userlist.css" />
    <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">
    <title>UserList</title>
</head>
<body>
    <nav >

        <div id="navbarSupportedContent">
            <form class="form-inline my-2 my-lg-0" method="post" >
                <input name="stringId" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>
    <a asp-action="DocumentAdd">Add Document</a>

    <div class="container bootstrap snippets bootdey">
        <div class="row">
            <div class="col-lg-12">
                <div class="main-box no-header clearfix">
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table class="table user-list">
                                <thead>
                                    <tr>
                                        <th><span>Images</span></th>
                                        <th><span>Country</span></th>
                                        <th><span>Document type</span></th>
                                        <th><span>Sex</span></th>
                                        <th><span>Dob</span></th>
                                        <th><span>ISS</span></th>
                                        <th><span>EXP</span></th>
                                        <th><span>AllAngels</span></th>
                                        <th><span>HaveSelfie</span></th>
                                        <th><span>Sides</span></th>
                                        <th><span>SSN</span></th>
                                        <th><span>Enable</span></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    
                                    @if (ViewBag.Filter != null && ((List<DocumentAddEditViewModel>)ViewBag.Filter).Count > 0)
                                    {
                                        @foreach (var item in ViewBag.Filter)
                                        {
                                            <tr>
                                                <td>
                                                    <label style="display:block;">
                                                        @foreach(var image in item.Images)
                                                        {
                                                            <img src="/Home/ImageById/@image.Id" style="width:100px;" />
                                                        }
                                                        
                                                    </label>
                                                    <a href="#" class="user-link">@item.strId</a>
                                                </td>
                                                <td class="text-center">
                                                    <span class="label label-default">@item.CountryName</span>
                                                </td>
                                                <td class="text-center">
                                                    <span class="label label-default">@item.DocTypeName</span>
                                                </td>
                                                <td class="text-center">
                                                    <span class="label label-default">@item.Sex</span>
                                                </td>
                                                <td class="text-center">
                                                    <span class="label label-default">@item.DOB</span>
                                                </td>
                                                <td class="text-center">
                                                    <span class="label label-default">@item.ISS</span>
                                                </td>
                                                <td class="text-center">
                                                    <span class="label label-default">@item.EXP</span>
                                                </td>
                                                <td class="text-center">
                                                    @if (item.SSN == true)
                                                    {
                                                        <span class="label label-default">✅</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="label label-default">❌</span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    @if (item.SSN == true)
                                                    {
                                                        <span class="label label-default">✅</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="label label-default">❌</span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    <span class="label label-default">@item.Sides</span>
                                                </td>
                                                
                                                <td class="text-center">
                                                    @if (item.SSN == true)
                                                    {
                                                        <span class="label label-default">✅</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="label label-default">❌</span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    @if (item.SSN == true)
                                                    {
                                                        <span class="label label-default">✅</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="label label-default">❌</span>
                                                    }
                                                </td>
                                                <div>
                                                    <td style="width: 20%;">
                                                        <a href="#" class="table-link text-warning">
                                                        </a>
                                                        <a asp-action="DocumentAdd" asp-route-id="@item.Id" class="table-link text-info">
                                                            <span class="fa-stack">
                                                                <i class="fa fa-square fa-stack-2x"></i>
                                                                <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                            </span>
                                                        </a>
                                                        <a asp-action="DocumentDelete" asp-controller="Home" asp-route-Id="@item.Id" class="table-link danger">
                                                            <span class="fa-stack">
                                                                <i class="fa fa-square fa-stack-2x"></i>
                                                                <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                                                            </span>
                                                        </a>
                                                    </td>
                                                </div>
                                                
                                            </tr>
                                                
                                        }
                                    }
                                    
                                    else
                                    {
                                        <tr>
                                            <td colspan="3">No documents found</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
